<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="6dp"
    android:paddingTop="4dp"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"

        android:layout_marginStart="1dp"
        android:paddingEnd="2dp"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp"
        tools:cardElevation="10dp"
        tools:cardMaxElevation="4dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:paddingEnd="2dp"
            android:paddingStart="2dp">

            <TextView
                android:id="@+id/order_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:alpha=".5"
                android:paddingTop="3dp"
                android:text="Order #"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_marginTop="9dp"
                android:layout_toEndOf="@+id/order_number_label"
                android:paddingStart="15dp"
                android:paddingTop="3dp"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/order_number_label"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:paddingEnd="3dp"
                android:paddingRight="3dp"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/total_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/order_number_label"
                android:layout_gravity="left"
                android:paddingTop="12dp"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:layout_marginLeft="2dp"
                tools:layout_marginTop="88dp" />

            <TextView
                android:id="@+id/total_products_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/order_number_label"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toRightOf="@id/total_products"
                android:alpha=".5"
                android:paddingTop="12dp"
                android:text="Products"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:layout_marginTop="90dp" />

            <TextView
                android:id="@+id/order_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/order_date"
                android:layout_alignTop="@+id/total_products"
                android:layout_gravity="right"
                android:layout_marginBottom="2dp"
                android:paddingEnd="3dp"
                android:paddingTop="10dp"
                android:textAppearance="?attr/textAppearanceListItem" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
